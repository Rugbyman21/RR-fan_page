<%= render "layouts/errors", :object => @member %>

<%= form_for [@artist, @member] do |f| %>
  <div class="form-group">
    <%= f.label :first_name%>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name%>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :instrument%>
    <%= f.text_field :instrument, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :age%>
    <%= f.text_field :age, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :time_in_band%>
    <%= f.text_field :time_in_band, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
