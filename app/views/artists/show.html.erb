<h1><%= @artist.name %> - <em><%= @genre.name %></em></h1>

<%= link_to "Add New Member", new_artist_member_path(@artist), class: "btn btn-primary" %>

<%= link_to "Add New Review", new_artist_review_path(@artist), class: "btn btn-primary" %>

<%= link_to "Back To #{@genre.name}", genre_path(@genre), class: "btn btn-primary" %>

<%= link_to "Delete #{@artist.name}", artist_path(@artist), :data => {confirm: "Are Your Sure?", method: "delete"}, class: "btn btn-danger" %>

<%= link_to "Update #{@artist.name}", edit_artist_path(@artist), class: "btn btn-warning"%>

<h3>Here are the Members of <%= @artist.name %></h3>

<div class="row">
  <% @artist.members.each do |member| %>
    <div class="col-md-3">
      <h3><%= link_to "#{member.first_name} #{member.last_name}", artist_member_path(@artist, member) %></h3>
    </div>
  <% end %>
</div>

<h3>Here are all of the Reviews for <%= @artist.name %></h3>

<div class="row">
  <% @artist.reviews.each do |review| %>
    <div class="col-md-3">
      <h3><%= review.author %></h3>
      <p><em><%= review.created_at.to_date.to_formatted_s(:long_ordinal) %></em></p>
      <p><%= review.content %></p>

      <%= link_to "Delete", artist_review_path(@artist, review), :data => {confirm: "Are You Sure?", method: "delete"} %>
    </div>
  <% end %>
</div>
